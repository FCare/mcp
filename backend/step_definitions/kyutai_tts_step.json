{
  "name": "kyutai_tts",
  "class_name": "KyutaiTTSStep",
  "module_path": "steps.tts.kyutai_tts_step",
  "description": "TTS Kyutai pour synthèse vocale française",
  "version": "1.0",
  "category": "tts",
  "input_formats": ["text"],
  "output_formats": ["audio_chunk"],
  "config_schema": {
    "type": "object",
    "properties": {
      "host": {
        "type": "string",
        "default": "unmute-talk.caronboulme.fr",
        "description": "URL API Kyutai"
      },
      "port": {
        "type": "integer",
        "default": 443,
        "description": "Port du serveur Kyutai"
      },
      "api_key": {
        "type": "string",
        "default": "your_tts_api_key_here",
        "description": "Clé API Kyutai TTS (définir TTS_API_KEY dans .env)"
      },
      "sample_rate": {
        "type": "integer",
        "default": 24000,
        "description": "Taux d'échantillonnage attendu",
        "enum": [24000]
      },
      "format": {
        "type": "string",
        "default": "pcm",
        "description": "Format audio de sortie",
        "enum": ["pcm", "PcmMessagePack", "ogg_vorbis"]
      },
      "voice": {
        "type": "string",
        "default": "male_1",
        "description": "Voix à utiliser pour la synthèse",
        "enum": ["male_1", "female_1"]
      },
      "cfg_alpha": {
        "type": "number",
        "default": 1.5,
        "description": "Paramètre de configuration CFG",
        "minimum": 0.1,
        "maximum": 3.0
      }
    },
    "additionalProperties": false
  }
}